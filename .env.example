# ============================================================================
# Green Agent Finance (Evaluator) - Environment Variables Template
# ============================================================================
# Copy this file to .env and fill in your actual values:
#   cp .env.example .env
#
# IMPORTANT: Never commit .env to git!
# ============================================================================

# ----------------------------------------------------------------------------
# SERVER CONFIGURATION
# ----------------------------------------------------------------------------

# Base URL for the agent card (used in agent-card.json)
FINANCE_GREEN_URL=http://localhost:9009

# Agent name displayed in agent card
FINANCE_GREEN_NAME=finance-green-agent

# Agent version
FINANCE_GREEN_VERSION=1.0.0

# ----------------------------------------------------------------------------
# CACHE CONFIGURATION
# ----------------------------------------------------------------------------

# Directory for cached web pages and SEC filings (offline mode)
FINANCE_GREEN_CACHE_DIR=cache

# ----------------------------------------------------------------------------
# LOGGING
# ----------------------------------------------------------------------------

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Enable verbose logging for debugging (0 = off, 1 = on)
FINANCE_GREEN_VERBOSE=0

# ----------------------------------------------------------------------------
# DETERMINISM (for reproducible evaluations)
# ----------------------------------------------------------------------------

# Python hash seed for reproducibility
PYTHONHASHSEED=42
